<table class="property_table">
  <tr>        
    <th><%= t("collector.spider.header.url") %></th>
    <td><%= link_to @spider_result.url, @spider_result.url %></td>
  </tr>
  <tr>
    <th><%= t("collector.spider.header.feed") %></th>
    <td><%= link_to @spider_result.feed.title, feed_path(@spider_result.feed) %></td>
  </tr>
  <tr>
    <th><%= t("collector.spider.header.spidered_at") %></th>
    <td><%= format_date @spider_result.created_at %></td>
  </tr>
  <tr>
    <th><%= t("collector.spider.header.scraper") %></th>
    <td><%= @spider_result.scraper or t("collector.general.none") %></td>
  </tr>
  <tr>
    <th><%= t("collector.spider.header.successful") %></th>
    <td><%= @spider_result.failed? ? @spider_result.failure_message : t("collector.general.yes") %></td>
  </tr>
</table>

<% if @spider_result.scraped_content -%>
  <div style="margin: 15px; background-color: #eee; padding: 10px; border: 1px solid grey;">
    <%= @spider_result.scraped_content %>
  </div>
<% end -%>